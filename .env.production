# Production Environment Configuration
NODE_ENV=production

# NextAuth Configuration (Production)
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-production-secret-here

# OAuth Provider Credentials (Production)
# Google OAuth - Production
GOOGLE_CLIENT_ID=your-google-production-client-id
GOOGLE_CLIENT_SECRET=your-google-production-client-secret

# GitHub OAuth - Production
GITHUB_CLIENT_ID=your-github-production-client-id
GITHUB_CLIENT_SECRET=your-github-production-client-secret

# Stripe Configuration (Live Mode)
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-publishable-key
STRIPE_SECRET_KEY=sk_live_your-live-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-live-webhook-secret

# Stripe Price IDs (Live)
STRIPE_PRO_PRICE_ID=price_your-live-pro-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-live-enterprise-price-id

# Database (Production)
# Azure PostgreSQL or Azure SQL Database
DATABASE_URL="postgresql://username:password@server.postgres.database.azure.com:5432/database?sslmode=require"

# Azure App Service Configuration
WEBSITES_PORT=3000